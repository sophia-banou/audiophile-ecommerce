---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero/index.astro";
import CategoryNavigation from "../components/CategoryNavigation/index.astro";
import Button from "../components/Button/index.astro";
const basePath = import.meta.env.BASE_URL || "/";
---

<BaseLayout>
  <Hero />
  <main class="home__main horizontal-pad">
    <div class="main-wrapper">
      <CategoryNavigation />
      <section class="home__banners">
        <div class="home__banner1">
          <picture class="banner1__picture" data-aos="fade-up">
            <source
              srcset="/audiophile-ecommerce/assets/home/desktop/image-speaker-zx9.png"
              media="(min-width: 1025px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/tablet/image-speaker-zx9.png"
              media="(max-width: 1024px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/mobile/image-speaker-zx9.png"
              media="(max-width: 599px)"
            />
            <img
              src="/audiophile-ecommerce/assets/home/desktop/image-speaker-zx9.png"
              alt="ZX9 Speakers"
            />
          </picture>
          <picture class="banner1__pattern">
            <img
              src="/audiophile-ecommerce/assets/home/desktop/pattern-circles.svg"
              alt="Pattern"
            />
          </picture>
          <div class="banner1__info">
            <div class="banner1__text">
              <h1>ZX9 SPEAKER</h1>
              <p>
                Upgrade to premium speakers that are phenomenally built to
                deliver truly remarkable sound.
              </p>
            </div>
            <Button
              buttonType="2"
              link={`${basePath}speakers/zx9-speaker`}
              text="SEE PRODUCT"
            />
          </div>
        </div>
        <div class="home__banner2" data-aos="fade-left">
          <picture class="banner2__picture">
            <source
              srcset="/audiophile-ecommerce/assets/home/desktop/image-speaker-zx7.jpg"
              media="(min-width: 1025px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/tablet/image-speaker-zx7.jpg"
              media="(max-width: 1024px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/mobile/image-speaker-zx7.jpg"
              media="(max-width: 599px)"
            />
            <img
              src="/audiophile-ecommerce/assets/home/desktop/image-speaker-zx7.jpg"
              alt="ZX7 Speakers"
            />
          </picture>
          <div class="banner2__info">
            <h4>ZX7 SPEAKER</h4>
            <Button
              buttonType="4"
              link={`${basePath}speakers/zx7-speaker`}
              text="SEE PRODUCT"
            />
          </div>
        </div>
        <div class="home__banner3">
          <picture class="banner3__picture" data-aos="fade-right">
            <source
              srcset="/audiophile-ecommerce/assets/home/desktop/image-earphones-yx1.jpg"
              media="(min-width: 1025px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/tablet/image-earphones-yx1.jpg"
              media="(max-width: 1024px)"
            />
            <source
              srcset="/audiophile-ecommerce/assets/home/mobile/image-earphones-yx1.jpg"
              media="(max-width: 599px)"
            />
            <img
              src="/audiophile-ecommerce/assets/home/desktop/image-earphones-yx1.jpg"
              alt="YX1 Earphones"
            />
          </picture>
          <div class="banner3__box">
            <div class="banner3__info">
              <h4>YX1 EARPHONES</h4>
              <Button
                buttonType="4"
                link={`${basePath}earphones/yx1-earphones`}
                text="SEE PRODUCT"
              />
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
