---
import Button1 from "./Button1.astro";
import Button2 from "./Button2.astro";
import Button3 from "./Button3.astro";
import Button4 from "./Button4.astro";

const { buttonType, link, text } = Astro.props;
---

{buttonType === "1" && <Button1 link={link} text={text} />}
{buttonType === "2" && <Button2 link={link} text={text} />}
{buttonType === "3" && <Button3 link={link} text={text} />}
{buttonType === "4" && <Button4 link={link} text={text} />}
